<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

   <TextView
       android:id="@+id/tv_formulirpendaftaran"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="FORMULIR PENDAFTARAN"
       android:textStyle="bold"
       android:gravity="center_horizontal"
       android:layout_margin="15dp"
       android:textSize="17dp"/>
    
    <EditText
        android:id="@+id/et_inputnama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nama Lengkap"
        android:layout_margin="10dp"
        android:layout_below="@id/tv_formulirpendaftaran"
        android:textSize="15dp"/>
    
    <EditText
        android:id="@+id/et_inputnomorpendaftaran"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nomor Pendaftaran"
        android:layout_margin="10dp"
        android:layout_below="@id/et_inputnama"
        android:textSize="15dp"/>

 <Spinner
     android:id="@+id/sp_jalurpendaftaran"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:layout_below="@id/et_inputnomorpendaftaran"
     android:layout_marginStart="10dp"
     android:layout_marginTop="10dp"
     android:layout_marginEnd="10dp"
     android:layout_marginBottom="10dp"
     android:entries="@array/daftar_jalur" />
    <CheckBox
        android:id="@+id/cb_konfirmasi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_below="@id/sp_jalurpendaftaran"
        android:text="Konfirmasi Daftar"/>

    <Button
        android:id="@+id/btn_daftar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Daftar"
        android:layout_margin="10dp"
        android:layout_below="@id/cb_konfirmasi"/>


</RelativeLayout>